@model List<Inventory.Web.Models.ReportProductLossViewModel>
@{
    Layout = "";
    //ViewBag.Title = " MM Loss";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width-device-width" />
    <title>MM Report Stock Position</title>
    @Styles.Render("~/Content/css")

    <style>
        table th:nth-child(1) {
            width: 10%;
        }

        table td:nth-child(1) {
            text-align: right;
        }
        table th:nth-child(2) {
            width: 10%;
        }

        table td:nth-child(2) {
            text-align: center;
        }

        table th:nth-child(3) {
            width: 30%;
        }

        table td:nth-child(3) {
            text-align: left;
        }
        table th:nth-child(4) {
            width: 10%;
        }

        table td:nth-child(4) {
            text-align: left;
        }

        table th:nth-child(5) {
            width: 10%;
        }

        table td:nth-child(5) {
            text-align: left;
        }


        tr {
            page-break-inside: avoid;
        }
    </style>

</head>
<body>
    <div class="col-md-12 text-center">
        <img src="~/Content/Images/logo.png" style="height: 140px" />
        <h3>Report Product Loss</h3>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Code</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Count</th>
                <th>Reason</th>


            </tr>
        </thead>
        @{ 
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date</td>
                    <td>@item.CodeProduct</td>
                    <td>@item.NameProduct</td>
                    <td>@item.QuantityProduct</td>
                    <td>@item.Count</td>
                    <td>@item.Reason</td>
                </tr>
            }
        }
    </table>
</body>
</html>

